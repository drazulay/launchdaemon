<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.clamav.clamd</string>
    <key>ProgramArguments</key>
    <array>
        <string>/opt/homebrew/sbin/clamd</string>
        <string>-F</string>
        <string>-l</string>
        <string>/private/var/log/clamav/clamd.log</string>
    </array>
    <key>MachServices</key>
    <dict>
        <key>com.clamav.clamd</key>
        <true/>
    </dict>
    <key>RunAtLoad</key>
    <true/>
    <key>KeepAlive</key>
    <true/>
    <key>UserName</key>
    <string>root</string>
</dict>
</plist>
